<Window x:Class="ProjectManager2000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManager2000"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Slider x:Name="LogChooser" IsSnapToTickEnabled="True" HorizontalAlignment="Left" Margin="43,77,0,0" VerticalAlignment="Top" Width="411" Height="25" ValueChanged="LogChooser_ValueChanged" SmallChange="1" LargeChange="2" AutoToolTipPlacement="BottomRight"/>
        <Label x:Name="TestLabel" Content="Label" HorizontalAlignment="Left" Margin="10,159,0,0" VerticalAlignment="Top" Height="150" Width="497" FontSize="20"/>
        <Label x:Name="SliderValue" Content="{Binding ElementName=LogChooser,Path=Value}" HorizontalAlignment="Left" Margin="76,25,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
